<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginandMain.MainActivity" android:background="@color/colorAccent">

        <com.google.android.gms.common.SignInButton
                android:layout_width="261dp"
                android:layout_height="53dp"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/login_button"
                app:layout_constraintVertical_bias="0.623"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="389dp" app:srcCompat="@drawable/logo_transparent"
                tools:layout_editor_absoluteX="0dp"
                android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/login_button"/>

</android.support.constraint.ConstraintLayout>